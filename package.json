{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "tell-me-the-time",
  "title": "Tell me the time",
  "description": "Show current or specific time in predefined locations",
  "icon": "command-icon.png",
  "author": "lukasoppermann",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "What's the time in ...",
      "description": "Template for showing a static list",
      "mode": "view",
      "preferences": [
        {
          "name": "link",
          "type": "textfield",
          "required": false,
          "title": "Link",
          "description": "Link",
          "placeholder": "Link",
          "default": "https://duckduckgo.com/?q={Query}"
        },
        {
          "name": "openWithRequired",
          "type": "appPicker",
          "required": false,
          "title": "Open with (required)",
          "description": "Open with",
          "default": "Firefox"
        },
        {
          "name": "openWithOptional",
          "type": "appPicker",
          "required": false,
          "title": "Open with (optional)",
          "description": "Open with",
          "default": "Safari"
        },
        {
          "name": "ignoreValueProperty",
          "type": "appPicker",
          "required": false,
          "title": "Open with (optional, ignore `value`)",
          "description": "`value` property should not be fetched from the manifest file",
          "default": "Safari",
          "value": {
            "name": "Firefox",
            "bundleId": "org.mozilla.firefox",
            "path": "/Applications/Firefox.app"
          }
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.37.1",
    "worldcities": "^0.1.7"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
